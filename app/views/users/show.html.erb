<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @microposts_all.count %>)</h3>
      <!-- or @user.microposts.count -->
      <ol class="microposts">
        <%= render @microposts_all %>
      </ol>
      <%= will_paginate @microposts_all %>
    <% end %>
  </div>
</div>